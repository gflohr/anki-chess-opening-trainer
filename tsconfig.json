{
	"extends": "@tsconfig/svelte",
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "bundler",
		"target": "es2017",
		"verbatimModuleSyntax": true,
		"sourceMap": true,

		"outDir": "./src/assets",
		"baseUrl": ".",
		"rootDir": "./typescript",
		"allowImportingTsExtensions": true
	},
	"exclude": ["node_modules", "src/assets"],
	"includes": ["./typescript", "./global.d.ts"]
}
