# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = tab
tab_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
tab_size = 2

[*.yaml]
tab_size = 2
indent_style = spaces
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
